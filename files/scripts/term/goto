#!/bin/sh
# shellcheck disable=SC2164

goto() {
    if [ -n "$1" ]; then
        nvim "$1"
    else
        directory=$(fd --hidden --no-ignore --type d\
            --exclude ".cache"\
            --exclude ".local/share/Trash"\
            --exclude ".mozilla"\
            --exclude ".npm"\
            --exclude ".pki"\
            . "$HOME" | fzf --header "Jump to selected folder.")
        [ -z "$directory" ] || cd "$directory"
    fi
}
